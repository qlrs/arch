#!/bin/sh

song=`mpc status | sed "/^volume:/d;s/\\&/&amp;/g;s/\\[paused\\].*/â–¶/g;/\\[playing\\].*/d" | paste -sd ' '`

case $BLOCK_BUTTON in
    1) [ `pgrep "ncmpcpp"` ] && echo "ğŸµ $song" || setsid -f $TERMINAL -e ncmpcpp ;;
    2) mpc clear > /dev/null ;;
    3) mpc toggle > /dev/null ; echo "ğŸµ $song" ;;
    4) mpc next > /dev/null ; echo "ğŸµ $song" ;;
    5) mpc prev > /dev/null ; echo "ğŸµ $song" ;;
esac

