#!/bin/sh
#need to add dunst notif

url=wttr.in/29575\?format="%C\n%f"
temp=`curl -s "$url" | sed -n '2p' | sed 's/+//g'`
condition=`curl -s "$url" | sed -n '1p'`

case "$condition" in
    [sS]unny) echo "â˜€ï¸ "$condition"  "$temp"" ; notify-send "Weather updated" ;;
    "Partly cloudy"|[oO]vercast|[cC]loudy) echo "â˜ï¸ "$condition"  "$temp"" ; notify-send "Weather updated" ;;
    "Light rain"|"Rain, mist"|[rR]ain|[rR]ainy|"Light rain, mist") echo "ğŸŒ§ï¸ "$condition " "$temp""; notify-send "Weather updated" ;;
    "Clear") echo "ğŸŒ "$condition " "$temp"" ; notify-send "Weather updated" ;;
    *) echo "idk "$condition"  "$temp"" ; notify-send "Weather updated" ;;
esac

